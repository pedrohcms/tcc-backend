generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://postgres:root@localhost:5432/tcc"
}

model knex_migrations {
  id             Int       @default(autoincrement()) @id
  name           String?
  batch          Int?
  migration_time DateTime?
}

model knex_migrations_lock {
  index     Int  @default(autoincrement()) @id
  is_locked Int?
}

model users {
  id            Int           @default(autoincrement()) @id
  name          String
  email         String        @unique
  password      String
  created_at    DateTime      @default(now())
  updated_at    DateTime      @default(now())
  token         String?
  profile_id    Int           @default(1)
  user_profiles user_profiles @relation(fields: [profile_id], references: [id])
}

model user_profiles {
  id           Int     @default(autoincrement()) @id
  profile_name String
  users        users[]
}
